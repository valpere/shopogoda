# ShoPogoda - Production Environment Configuration
# Copy to .env.production and customize

# ================================================================
# BOT CONFIGURATION
# ================================================================
TELEGRAM_BOT_TOKEN=your_production_bot_token_here
BOT_DEBUG=false
BOT_WEBHOOK_URL=https://your-production-domain.com/webhook
BOT_WEBHOOK_PORT=8080

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=shopogoda
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=shopogoda
DB_SSL_MODE=require

# ================================================================
# REDIS CONFIGURATION
# ================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_DB=0

# ================================================================
# WEATHER API CONFIGURATION
# ================================================================
OPENWEATHER_API_KEY=your_production_api_key_here
AIRQUALITY_API_KEY=your_airquality_api_key
WEATHER_USER_AGENT=ShoPogoda-Weather-Bot/1.0 (production@shopogoda.bot)

# ================================================================
# LOGGING CONFIGURATION
# ================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ================================================================
# MONITORING & OBSERVABILITY
# ================================================================
PROMETHEUS_PORT=2112
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# ================================================================
# ENTERPRISE INTEGRATIONS
# ================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/PRODUCTION
GRAFANA_URL=https://grafana.your-domain.com

# ================================================================
# GRAFANA CONFIGURATION
# ================================================================
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE

# ================================================================
# DEPLOYMENT METADATA
# ================================================================
VERSION=latest
GITHUB_REPOSITORY=valpere/shopogoda
ENVIRONMENT=production
