# ShoPogoda - Staging Environment Configuration
# Copy to .env.staging and customize

# ================================================================
# BOT CONFIGURATION
# ================================================================
TELEGRAM_BOT_TOKEN=your_staging_bot_token_here
BOT_DEBUG=true
BOT_WEBHOOK_URL=https://staging.your-domain.com/webhook
BOT_WEBHOOK_PORT=8081

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=shopogoda
DB_PASSWORD=staging_password_here
DB_NAME=shopogoda_staging
DB_SSL_MODE=disable

# ================================================================
# REDIS CONFIGURATION
# ================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================================================
# WEATHER API CONFIGURATION
# ================================================================
OPENWEATHER_API_KEY=your_staging_api_key_here
AIRQUALITY_API_KEY=your_airquality_api_key
WEATHER_USER_AGENT=ShoPogoda-Weather-Bot/1.0-staging (staging@shopogoda.bot)

# ================================================================
# LOGGING CONFIGURATION
# ================================================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ================================================================
# MONITORING & OBSERVABILITY
# ================================================================
PROMETHEUS_PORT=2112
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# ================================================================
# ENTERPRISE INTEGRATIONS
# ================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK
TEAMS_WEBHOOK_URL=
GRAFANA_URL=http://localhost:3001

# ================================================================
# GRAFANA CONFIGURATION
# ================================================================
GRAFANA_ADMIN_PASSWORD=admin123

# ================================================================
# DEPLOYMENT METADATA
# ================================================================
VERSION=develop
GITHUB_REPOSITORY=valpere/shopogoda
ENVIRONMENT=staging
